{% extends "layout.jinja2" %}

{% block content %}

{% from 'bootstrap5/form.html' import render_form %}

<div class="container mt-4">
  <div class="row">
    <div class="col-10 d-flex justify-content-center mb-5">
      <h2>Minimal Organisim JCVI-Syn3a PROST Results</h2>
    </div>
  </div>
    <div class="col-10">
    <table id="example" class="table table-striped mt-2 mb-5" style="width:100%">
        <thead>
            <tr>
                <th>NCBI ID</th>
                <th>JCVI ID</th>
                <th>Function</th>
                <th>Classification</th>
                <th>Essentiality</th>
                <th>PROST Homolog</th>
                <th>TM-Score</th>
                <th>Sequence Id.</th>
            </tr>
        </thead>
        <tbody>
          {% for p in summary %}
            <tr>
                <td><a href="/result?p={{ p[0] }}" target="_self">{{ p[0] }}</a></td>
                <td>{{ p[1] }}</td>
                <td>{{ p[2] }}</td>
                <td>{{ p[3] }}</td>
                <td>{{ p[4] }}</td>
                <td>{{ p[5] }}</td>
                <td>{{ p[6] }}</td>
                <td>{{ p[7] }}</td>
            </tr>
          {% endfor %}
        </tbody>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
      $('#example').DataTable();
  });
</script>
{% endblock %}
